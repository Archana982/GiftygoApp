<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/signInFragmentFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.giftygo.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_signInFragmentFragment"
            app:destination="@id/signInFragmentFragment" />
        <action
            android:id="@+id/action_mainFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
        <action
            android:id="@+id/action_mainFragment_self"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_mainFragment_to_likeFragment2"
            app:destination="@id/likeFragment2" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.giftygo.DetailsFragment"
        android:label="DetailsFragment" >
        <action
            android:id="@+id/action_detailsFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
        <action
            android:id="@+id/action_orderSuccessFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_detailsFragment_to_orderSummaryFragment"
            app:destination="@id/orderSummaryFragment" />
        <argument
            android:name="productId"
            app:argType="string"
            android:defaultValue="null" />
    </fragment>

    <fragment
        android:id="@+id/orderSummaryFragment"
        android:name="com.example.giftygo.OrderSummaryFragment"
        tools:layout="@layout/fragment_order_summary"
        tools:ignore="DuplicateIds">
        <action
            android:id="@id/action_orderSummaryFragment_to_orderSuccessFragment"
            app:destination="@id/cartFragment"/>
        <action
            android:id="@id/action_orderSuccessFragment_to_cartFragment"
            app:destination="@id/cartFragment"/>
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="color"
            app:argType="string" />
        <argument
            android:name="quantity"
            app:argType="integer" />
        <argument
            android:name="price"
            app:argType="integer" />
        <argument
            android:name="glbUrl"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/orderSuccessFragment"
        android:name="com.example.giftygo.OrderSuccessFragment"
        android:label="Order Success"
        tools:layout="@layout/fragment_order_success_fragment" >

    <action
        android:id="@+id/action_orderSummaryFragment_to_orderSuccessFragment"
        app:destination="@id/orderSuccessFragment" />
        <action
            android:id="@+id/action_orderSuccessFragment_to_cartFragment"
            app:destination="@id/cartFragment"/>
    </fragment>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.giftygo.CartFragment"
        android:label="CartFragment" />
    <fragment
        android:id="@+id/signInFragmentFragment"
        android:name="com.example.giftygo.SignInFragmentFragment"
        android:label="SignInFragmentFragment" >
        <action
            android:id="@+id/action_signInFragmentFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_signInFragmentFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.giftygo.SignUpFragment"
        android:label="SignUpFragment" >
        <action
            android:id="@+id/action_signUpFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_signInFragmentFragment"
            app:destination="@id/signInFragmentFragment" />
    </fragment>
    <fragment
        android:id="@+id/likeFragment2"
        android:name="com.example.giftygo.LikeFragment"
        android:label="LikeFragment" >
        <action
            android:id="@+id/action_likeFragment2_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_likeFragment2_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>


</navigation>