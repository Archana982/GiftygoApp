<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_card">

    <!-- Product Name -->
    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="4dp"/>

    <!-- Product Color -->
    <TextView
        android:id="@+id/tvProductColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color: Red"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="4dp"/>

    <!-- Quantity -->
    <TextView
        android:id="@+id/tvProductQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity: 2"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="4dp"/>

    <!-- Total Price -->
    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Price: â‚¹500"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:paddingBottom="4dp"/>

    <!-- Customer Name -->
    <TextView
        android:id="@+id/tvCustomerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer: John Doe"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:paddingBottom="2dp"/>

    <!-- Customer Phone -->
    <TextView
        android:id="@+id/tvCustomerPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: +911234567890"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:paddingBottom="4dp"/>

    <!-- Order Status -->
    <TextView
        android:id="@+id/tvOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Pending"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:paddingBottom="8dp"/>

    <!-- Buttons for Accept & Prepared -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnPrepared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prepared"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>
